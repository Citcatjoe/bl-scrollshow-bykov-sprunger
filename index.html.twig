					</div>
									

					<div id="trigger{{indexFormatter @index}}" class="trigger absolute top-8 w-full h-1"></div>
				</section> 
				{{else}}
				
				<!-- CONTENT NORMAL -->
				<section class="container max-w-6xl overflow-auto relative mb-custom-section pt-6">
					<div class="{{colClasses}} bg " style="border-color: {{color}}">

						<span class="label">{{who}}</span>
						<h3 class="text-white mb-8 md:mb-10" style="text-shadow: 3px 3px {{color}};">{{{field2}}}</h3>
