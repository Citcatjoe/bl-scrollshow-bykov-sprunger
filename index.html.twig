								<span class="w-1/4 text-center font-thin"><span class="sport text-2xl md:text-4xl">749</span><br>points</span>
							</div>
						</div>
						<p class="text-white leading-relaxed text-base md:text-xl opacity-80 mb-4">{{{text2}}}</p>
						<p class="text-white leading-relaxed text-base md:text-xl opacity-80">{{{text3}}}</p>
					</div>
					<div id="trigger{{indexFormatter @index}}" class="trigger absolute top-8 w-full h-1"></div>
				</section>     

				<!-- CONTENT CREDITS -->
				{{else if isCredits}}
				<section class="credits container py-8 max-w-6xl overflow-auto relative">
					<div class="w-80 absolute top-1/2 left-1/2 -translate-x-2/4 -translate-y-2/4">
